@import '../../../src/assets/styles/color';


$primary:#1D7946;
$first-color: $primary;
$first-shadow-color: #6CD89D ;
$second-color: #FEFEFE;
$third-color:  #0d6e3e;
$table-cell-padding: .15rem;

.header-fixed { 
    position: absolute; 
    display:none;
    z-index: 1;
    overflow: hidden;
    margin-right: 15px;
    // width: auto;
}
.parent-tabl-container{
    position: relative;
}

table thead{
    background-color: #28313d;
    color: #FFF;
    font-size: 14px;
}
td{
    text-align: left;
    // vertical-align: middle;
}
td:first-of-type, td:last-of-type{
    text-align: center !important;
}
table thead th{
    vertical-align: middle;
    text-align: center;
}
table thead th {
    flex: 0 0 100px !important;
  }
.table-striped tbody tr:nth-of-type(odd) {
    background-color: rgba(0,0,0,.05);
    font-size: 14px;
}
.table-striped tbody tr:nth-of-type(even) {
    font-size: 14px;
}
.pagination-view
{
    float:right;
}
.table-extra-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 5px;
}
#myInput {
    width: 100%;
    border-radius: 0;
    font-size: 16px; 
    padding: 7px 20px 12px 30px;
    font-style: inherit;
    border: 1px solid #ddd;
    // margin-bottom: 12px;
    box-shadow: 0px 0px 2px 0px;
}
.table-btn.search .form-group{
    position: relative;
    margin-bottom: 12px;
    @media (max-width:599px) {
        width: 160px;
    }
}
.table-btn.search .form-group:before {
    position: absolute;
    font-family: 'FontAwesome';
    top: 5px;
    left: 7px;
    color: #9c9c9c;
    content: "\f002";
  }

.search-area
{
    font-style: italic;
    margin-top: 30px;
    margin-bottom: 30px;
    font-size: 30px;
}
// .search-box{
//     top: -55px;
// }
// .table-sec{
//     top: -8px;
// }

.mat-form-field {
    display: inline-block;
    position: relative;
    text-align: left;
    width: 23%;
    float: left;
}
mat-label.ng-star-inserted {
    padding-left: 5px;
}
input[type="text"] 
{
    font-style:italic;
}
.table-btn .btn-excel, .table-btn .btn-pdf{
    margin-bottom: 16px;
    background-color: #357080;
    color: #FFF;
    border-radius: 0;
}
.btn-excel:focus, .btn-excel:active{
    outline: none !important;
    border: none !important;
}
.fa-sorting{
    cursor: pointer;
}
.table-btn {
    // display: inline-block;
    // float: right;
    // margin: 0 5px;
    // margin-bottom: 15px;
    display: flex;
    justify-content: flex-end;
}
::ng-deep .mat-tooltip {
    color: white !important;
    background-color: $primary !important;
}

.hyperlink
{
    color: #007bff !important;
    cursor: pointer;
}

.hyperlink:hover
{
    text-decoration: underline !important;
    color:#126ac7 !important;
}
.reset{
    background-color: #28313d;
    color: white;
    margin-left: 15px;
    border-radius: 0;
    height: 33px;
    padding: 5px;
}
.clear{
    font-weight: 600;
    font-size: 19px;
    border-radius: 50%;
    color: white;
    cursor: pointer;
}
.fileseys{text-align: left;}

button.btn.btn-submit.cms-approve.disbl.ng-star-inserted {
    cursor: no-drop;
}

.mat-slide-toggle {
    background: transparent;
    border: none;
}

::ng-deep .mat-slide-toggle-bar {
    background-color: $inactive-item-bg;
}
::ng-deep .mat-slide-toggle-thumb {
    background-color: $inactive-item-color;

}

::ng-deep .mat-slide-toggle.mat-checked .mat-slide-toggle-bar {
    background-color: $first-shadow-color; /*replace with your color*/
}

::ng-deep .mat-slide-toggle.mat-checked .mat-slide-toggle-thumb {
    background-color: $first-color;
}

.card-border {
    border-bottom: 3px solid;
    border-image: url("^/assets/images/Stripe_3.svg") 25;
}

.card-border-container {
    width: calc(100% - 1px);
    height: 35px;
    position: absolute;
    bottom: 40px;
    z-index: -1;
}


.image-border {
    width: calc(100% - 1px);
    height: 28px;
    position: absolute;
    bottom: 0px;
    img {
        height: 5px;
        width: 100%;
        right: 0;
        left: 0;
        padding: 0;
        margin: 0;
        margin-bottom: 46px;
    }
}

.image {
    height: 20px;
}

button.btn.btn-submit.edit.ng-star-inserted {
    background-color: transparent !important;
}

.table {
    th,
    td {
      padding: $table-cell-padding;
      max-width: 700px !important;
    }
}

.search-box-wrapper {
    min-height: 50px;
    @media (max-width:767px) {
        min-height: 35px;
    }
}

.extras-container {
    min-height: 40px;
    @media (max-width:767px) {
        min-height: 35px;
    }
}

mat-checkbox#mat-checkbox-2, mat-checkbox#mat-checkbox-1 {
    padding-right: 0px;
}


::ng-deep .ngx-pagination .current {
    background: $primary !important;
  }