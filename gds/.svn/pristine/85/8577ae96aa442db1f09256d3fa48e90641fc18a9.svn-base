.content-sec{
  margin-top: 30px;
}
.dashboard-head {
  font-size: 22px;
  border-bottom: 1px solid #dddddd;
  padding-bottom: 5px;
  color: $first-color;
}
.upload{
  margin-left: 25px;
}
.btn-margin{
  background-color: $first-color;
  border-radius: 0;
  color: #fff;
  cursor: pointer;
}
.reset-btn{
  background-color: $first-color;
  border-radius: 2px;
  color: #fff;
  border: 1px solid #333;
  padding: 5px 20px 5px 20px;
  cursor: pointer;  
  width: 100px;
}
.submit-btn {
  background-color: $first-color;
  border: 1px solid #333;
  color: #fff;
  padding: 5px 20px 5px 20px;
  cursor: pointer;
  border-radius: 2px;
}
.edit-btn {
  background-color: $first-color;
  border: 1px solid #333;
  color: #fff;
  padding: 5px 20px 5px 20px;
  cursor: pointer;
  border-radius: 2px;
  width: 100px;
}
.submit-btn:disabled{
  background-color: #ccc;
  color: #444;
  border: 1px solid #777;
  border-radius: 2px;
  cursor: text;
}
.upload-banner{
  background-color: #ddd;
  width: 100%;
  position: absolute;
  z-index: 1000;
  opacity: 0;
  cursor: pointer;
  right: 0;
  top: 0;
  height: 100%;
}
.content-section{
  margin-top: 20px;
}
.btn-group{
  margin-top: 20px;
  margin-bottom: 20px;
}
.label-section{
  font-size: 14px;
}
.file-background{
  padding:5px 10px;
  background:$first-color;
  border:1px solid $first-color;
  position:relative;
  color:#fff;
  border-radius:2px;
  text-align:center;
  float:left;
  cursor:pointer;
  margin-right: 5px;
}
.file-background.disabled{
  // opacity: 0.8;
  background-color: #ccc;
  color: #444;
  border: 1px solid #777;
}
.table-div{
  margin-bottom: 3.5em;
}
textarea{
  min-height: 150px;
}
.example-section{
  margin-bottom: 10px;
}
.asterisk-mark {
  color: red;
  font-size: 16px;
}
